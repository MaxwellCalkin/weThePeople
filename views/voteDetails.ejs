<%- include('partials/headerBoot') -%>
    <div class="container">

        <div class="row mt-3">
            <div class="container col-12">
                <div class="card p-0">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-8">
                                <h3 class="card-title col"><%= bill.short_title ? bill.short_title : bill.title%></h3>
                                <a href="https://www.govtrack.us/congress/bills/<%= bill.congress%>/<%= bill.bill_slug%>/text" class="col">View Full Text Of This Bill on govtrack.us</a>
                                <div class="col">
                                    Total WTP Votes: <%= votes %>
                                </div>
                                <form action="/vote/createYea" method="POST" class="d-inline">
                                    <input type="hidden" name="title" value="<%= bill.title%>" />
                                    <input type="hidden" name="billSlug" value="<%= bill.bill_slug%>" />
                                    <input type="hidden" name="congress" value="<%= bill.congress%>" />
                                    <input type="hidden" name="summary" value="<%= bill.summary%>" />
                                    <input type="hidden" name="yea" value="1" >
                                    <button type="submit" class="btn btn-primary">Yea</button>
                                </form>
                                <form action="/vote/createNay" method="POST" class="d-inline">
                                    <input type="hidden" name="title" value="<%= bill.title%>" >
                                    <input type="hidden" name="billSlug" value="<%= bill.bill_slug%>" >
                                    <input type="hidden" name="congress" value="<%= bill.congress%>" >
                                    <input type="hidden" name="summary" value="<%= bill.summary%>" >
                                    <input type="hidden" name="nay" value="1" >
                                    <button type="submit" class="btn btn-primary">Nay</button>
                                </form>
                            </div>
                            <%if(bill.image) {%>
                                <img src="<%=bill.image%>" alt="vote pic" class="col-4">
                            <% }else{ %>
                                <img src="/imgs/wtp.png" alt="default bill image" class="col-4">
                            <% } %>
                        </div>
                    </div>
                </div>
                <div class="mt-5">
                    <h2>Vote On This Bill To Make A Post</h2>
                    <fieldset disabled="disabled">
                      <div class="mb-3">
                          <label for="title" class="form-label">Title</label>
                          <input type="text" class="form-control" id="title" name="title">
                      </div>
                      <div class="mb-3">
                        <label for="caption" class="form-label">Caption</label>
                        <textarea class="form-control" id="caption" name="caption"></textarea>
                      </div>
                      <div class="mb-3">
                        <label for="imgUpload" class="form-label">Image</label>
                        <input type="file" class="form-control" id="imageUpload" name="file">
                        <input type="hidden" class="form-control" id="slug" name="billSlug" value="<%=bill.bill_slug%>">
                        <input type="hidden" class="form-control" id="slug" name="billCongress" value="<%=bill.congress%>">
                      </div>
                      <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
                    </fieldset>
                  </div>
            </div>
        </div>
    </div>  
<%- include('partials/footer') -%>