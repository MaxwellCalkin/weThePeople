<%- include('partials/headerBoot') -%>
<div class="container">
  <div class="row mt-5">
      <div class="col-6">
        <h2 class="text-center">Profile</h2>
          <div>
              <p><strong>User Name</strong>: <%= user.userName %></p>
              <p><strong>Email</strong>: <%= user.email %></p>
              <p><strong>Your Congressional District</strong>: <%=user.state.toUpperCase() %>'s District Number <%=user.cd%></p>
              <p><strong>Your House Representative</strong>: <%= repsArray[0].name %></p>
              <p><strong>Your State's Senators</strong>: <%= senateArray[0].name%>, <%=senateArray[1].name %></p>
              <a href="/logout" class="col-3 btn btn-primary">Logout</a>
          </div>
      </div>
      <div class="col-6">
        <h2 class="text-center">Your Posts</h2>
        <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <div class="card p-0 mx-1">
              <img class="card-img-top" src="<%= posts[i].image%>">
              <div class="card-body">
                <h5 class="card-title"><%= posts[i].title%></h5>
                <a class=""href="/post/<%= posts[i]._id%>">View Post</a>
              </div>
            </div>
          </li>
        <% } %>
        </ul>
      </div>  
    </div>
  </div>
</div>
<%- include('partials/footer') -%>