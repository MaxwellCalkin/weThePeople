<%- include('partials/headerBoot') -%>
<div class="container mt-2">
  <div class="row g-3">
    <% for(var i=0; i<posts.length; i++) { %>
    <div class="col-sm-12 col-md-6 col-lg-4">
      <div class="card p-0">
        <img class="card-img-top" src="<%= posts[i].image %>" alt="<%= posts[i].title %>">
        <div class="card-body">
          <h5 class="card-title"><%= posts[i].title %></h5>
          <a class="btn btn-primary" href="/post/<%= posts[i]._id %>">View Post</a>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>
<%- include('partials/footer') -%>
